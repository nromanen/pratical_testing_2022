	"item": [
		{
			"name": "Authorization with invalid password",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.variables.set(\"email\", \"loveblessme@gmail.com\");",
							"pm.variables.set(\"password\", \"Greencity2!\");",
							"pm.variables.set(\"errorMessage\", \"The user does not exist by this email: loveblessme@gmail.com\");"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Перевірка наявності коду статусу 400",
							"pm.test(\"Status code is 400\", function () {",
							"    pm.response.to.have.status(400);",
							"});",
							"",
							"// Перевірка наявності повідомлення про невірний пароль",
							"pm.test(\"Bad password\", function() {",
							"    let data = pm.response.json();",
							"    pm.expect(data.message).to.include(\"password\");",
							"});",
							"",
							"// Перевірка відсутності власності \"accessToken\"",
							"pm.test(\"Not have accessToken\", function() {",
							"    let data = pm.response.json();",
							"    pm.expect(data).to.not.have.property(\"accessToken\");",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\"email\": \"{{EmailValid}}\", \"password\": \"{{PasswordInvalid}}\"}\n",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "https://greencity-user.greencity.social/ownSecurity/signIn",
					"protocol": "https",
					"host": [
						"greencity-user",
						"greencity",
						"social"
					],
					"path": [
						"ownSecurity",
						"signIn"
					]
				}
			},
			"response": []
		},
